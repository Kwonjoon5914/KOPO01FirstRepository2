<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Busy Holiday"
                android:textSize="45dp"
                android:textStyle="bold"
                android:textColor="#253E8F"
                android:layout_gravity="center"
                android:gravity="center|top"/>

            <ImageView
                android:id="@+id/MAImageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rabbit"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>

                <EditText
                    android:id="@+id/CTWEditText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_gravity="center"
                    android:hint="Username"
                    android:background="@drawable/back"/>

                <EditText
                    android:id="@+id/CTWEditText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_gravity="center"
                    android:hint="Password"
                    android:background="@drawable/back"
                    android:password="true"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/CTWButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:text="로그인"/>

                    <Button
                        android:id="@+id/CTWButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/CTWButton1"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:text="비회원으로 로그인"/>

                    <CheckBox
                        android:id="@+id/CTWCheckBox1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/CTWButton2"
                        android:layout_below="@id/CTWButton2"
                        android:text="  자동로그인"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/CTWTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/CTWCheckBox1"
                        android:layout_marginLeft="84dp"
                        android:layout_marginRight="30dp"
                        android:text="아직 계정이 없으세요?"
                        android:textSize="17dp"/>

                    <TextView
                        android:id="@+id/CTWTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/CTWTextView1"
                        android:layout_alignBaseline="@id/CTWTextView1"
                        android:text="회원가입하기"
                        android:textSize="17dp"
                        android:textColor="#4ACEF1"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/CTWTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/CTWTextView1"
                        android:layout_marginLeft="84dp"
                        android:layout_marginRight="30dp"
                        android:text="비밀번호를 잊었나요?"
                        android:textSize="17dp"/>

                    <TextView
                        android:id="@+id/CTWTextView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/CTWTextView2"
                        android:layout_toRightOf="@+id/CTWTextView3"
                        android:layout_marginLeft="4dp"
                        android:text="비밀번호찾기"
                        android:textSize="17dp"
                        android:textColor="#4ACEF1"
                        android:textStyle="bold"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>