<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPW">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 찾기"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_above="@+id/FPWTextView1"
                    android:layout_marginTop="150dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/FPWTextView1"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="가입 시 사용하신 이메일을 입력하시면 새 비밀번호를 생성할 수 있는 링크를 보내 드립니다."
                    android:textSize="30dp"
                    android:layout_marginTop="30dp"/>

                <EditText
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:text="가입하신 이메일 주소를 입력하세요"
                    android:background="@drawable/back"
                    android:layout_marginTop="45dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 설정 링크 받기"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:background="#FF9B00"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>